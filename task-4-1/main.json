{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "link": "https://raw.githubusercontent.com/AzureLabDevOps/ALipinski/master/task-4-1/"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "pubip-nsg-create",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('link'), '/pubip-nsg-create.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[concat(variables('link'), '/pubip-nsg-create-parameters.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "vnet-subnet-create",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('link'), '/vnet-subnet-create.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[concat(variables('link'), '/vnet-subnet-create-parameters.json')]",
                    "contentVersion": "1.0.0.0"
                }
            },
            "dependsOn": [
                "pubip-nsg-create"
            ],
            "parameters": {
                "nsg_id": {
                    "value": "[reference('pubip-nsg-create').outputs.resourceID.value]"
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "nic-vm-create",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('link'), '/nic-vm-create.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[concat(variables('link'), '/nic-vm-create-parameters.json')]",
                    "contentVersion": "1.0.0.0"
                }
            },
            "dependsOn": [
                "pubip-nsg-create",
                "vnet-subnet-create"
            ]
        }
    ]
}