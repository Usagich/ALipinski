{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "trafficRoutingMethod": {
            "type": "string"
        }     
    },
    "variables": {
        "tm_name":"[concat(resourceGroup().name,uniqueString(resourceGroup().id))]",
        "endpoint1_name":"[concat('endpoint1-', resourceGroup().name)]",
        "endpoint2_name":"[concat('endpoint2-', resourceGroup().name)]"
    },
    "resources": [
        {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/trafficmanagerprofiles",
            "name": "[variables('tm_name')]",
            "location": "global",
            
            "properties": {
                "trafficRoutingMethod": "[parameters('trafficRoutingMethod')]",
                "dnsConfig": {
                    "relativeName": "[variables('tm_name')]",
                    "ttl": 70
                },
              
             
                "monitorConfig": {
                    "protocol": "http",
                    "port": "80",
                    "path": "/"
                },
                "endpoints": [
                    {
                        "name": "[variables('endpoint1_name')]",
                        "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                        "properties": {
                            "endpointStatus": "Enabled",
                            "targetResourceId": "[resourceId('Microsoft.Web/sites', 'webapp1-TestRG5')]",
                            "weight": 1,
                            "priority": 1,
                            "endpointLocation": "west us"
                        }
                        },
                        {
                        "name": "[variables('endpoint2_name')]",
                        "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                        "properties": {
                            "endpointStatus": "Enabled",
                            "targetResourceId": "[resourceId('Microsoft.Web/sites', 'webapp2-TestRG5')]",
                            "weight": 1,
                            "priority": 2,
                            "endpointLocation": "west europe"}
                        
                    }
                ]
                
            }
        
        }
    ]
}