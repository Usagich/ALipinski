{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vm_login": {
            "type": "string"
        },
        "vm_passwd": {
            "type": "securestring"
        },
        "app_id": {
            "type": "string"
        },
        "app_pass": {
            "type": "securestring"
        },
        "jobid": {
            "type": "string"
        },
        "sastokenurl": {
            "type": "securestring"
        }
    },
    "variables": {
        "link": "https://raw.githubusercontent.com/AzureLabDevOps/ALipinski/master/task-9"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "vm_and_network",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "create-automation-account"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('link'), '/vm_and_network.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vm_login": {
                        "value": "[parameters('vm_login')]"
                    },
                    "vm_passwd": {
                        "value": "[parameters('vm_passwd')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "create-automation-account",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('link'), '/create-automation-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "app_id": {
                        "value": "[parameters('app_id')]"
                    },
                    "app_pass": {
                        "value": "[parameters('app_pass')]"
                    },
                    "jobid": {
                        "value": "[parameters('jobid')]"
                    },
                    "sastokenurl": {
                        "value": "[parameters('sastokenurl')]"
                    }
                }
            }
        }
    ]
}