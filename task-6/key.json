{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sku": {
            "type": "string",
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "standard",
                "Premium",
                "premium"
            ]
        },
        "accessPolicies": {
            "type": "array",
            "defaultValue": []
        },
        "tenant": {
            "type": "string"
        },
        "enabledForDeployment": {
            "type": "bool"
        },
        "enabledForTemplateDeployment": {
            "type": "bool"
        },
        "enabledForDiskEncryption": {
            "type": "bool"
        },
        "networkAcls": {
            "type": "object"
        },
        "secretsObject": {
            "type": "secureObject",
            "defaultValue": "{}"
        }
    },
    "variables": {
        "key_name": "[concat('keySQL-',resourceGroup().name)]"
    },
    "resources": [
        {
            "apiVersion": "2016-10-01",
            "name": "[variables('key_name')]",
            "location": "[resourceGroup().location]",
            "type": "Microsoft.KeyVault/vaults",
            "properties": {
                "enabledForDeployment": "[parameters('enabledForDeployment')]",
                "enabledForTemplateDeployment": "[parameters('enabledForTemplateDeployment')]",
                "enabledForDiskEncryption": "[parameters('enabledForDiskEncryption')]",
                "accessPolicies": "[parameters('accessPolicies')]",
                "tenantId": "[parameters('tenant')]",
                "sku": {
                    "name": "[parameters('sku')]",
                    "family": "A"
                },
                "networkAcls": "[parameters('networkAcls')]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(variables('key_name'), '/', parameters('secretsObject').secrets[copyIndex()].secretName)]",
            "apiVersion": "2016-10-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "value": "[parameters('secretsObject').secrets[copyIndex()].secretValue]",
                "attributes": {
                    "enabled": true
                }
            },
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', variables('key_name'))]"
            ],
            "copy": {
                "name": "secretsCopy",
                "count": "[length(parameters('secretsObject').secrets)]"
            }
        }
    ],
    "outputs": {
        "adminPass": {
          "type": "string",
          "value": "[parameters('secretsObject').secrets[0].secretValue]"
      }
    }
}