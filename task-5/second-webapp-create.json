{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location-2": {
            "type": "string"
        }
    },
    "variables": {
        "webapp_name": "[concat('webapp-2-',resourceGroup().name)]",
        "plan_name": "[concat('splan-2-',resourceGroup().name)]"
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "name": "[variables('plan_name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location-2')]",
            "sku": {
                "name": "F1",
                "capacity": 1
            },
            "properties": {
                "name": "[variables('plan_name')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('webapp_name')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location-2')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/',variables('plan_name'))]"
            ],
            "properties": {
                "name": "[variables('webapp_name')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', variables('plan_name'))]"
            }
        }
    
    ],
    "outputs": {}
}