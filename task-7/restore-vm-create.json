{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nic_name": {
            "type": "string"
        }
    },
    "variables": {
        "vm_name": "[concat('vm1-',resourceGroup().name)]"
    },
    "resources": [
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vm_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2S_v3"
                },
                "storageProfile": {
      
                    "osDisk": {
                      "name": "VmRestored_Osdisk",
                      "caching": "ReadWrite",
                      "osType": "Windows",
                      "createOption": "Attach",
                      "vhd": {
                        "uri": "https://task7restorestoracc.blob.core.windows.net/vm1task7-9d5b5bbc928e44d7b4b91d172893e2ab/vm1task7-osdisk-20181016-162349.vhd"
                      }
                    },
                    "dataDisks": [
                      {
                        "name": "VmRestored_Datadisk",
                        "diskSizeGB": 1,
                        "lun": 0,
                        "createOption": "Attach",
                        "vhd": {
                          "uri": "https://task7restorestoracc.blob.core.windows.net/vm1task7-9d5b5bbc928e44d7b4b91d172893e2ab/vm1task7-datadisk-000-20181016-162349.vhd"
                        }
                      }
                    ]
                  },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nic_name'))]"
                        }
                    ]
                }
            }
        }
    ]
}