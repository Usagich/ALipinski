{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alwaysOn": {
            "type": "string"
        },
        "sku_name": {
            "type": "string"
        },
        "sql_name":{
            "type": "string"
        },
        "db_name":{
            "type": "string"
        },
        "adminLogin": {
            "type": "string",
            "defaultValue": "Qasgfhg12342142"
        },
        "adminPass": {
            "type": "string",
            "defaultValue": "ZEtyu7702954!"
        }


        
    },
    "variables": {
        "webapp_name": "[concat('webapp',variables('plan_name'))]",
        "plan_name": "[concat('splan',resourceGroup().name)]",
        "ConnectionString": "[concat('Data Source=tcp:' , parameters('sql_name'), '.database.windows.net' , ',1433;Initial Catalog=', parameters('db_name'),';User Id=', parameters('adminLogin'),'@',  parameters('sql_name'),'.database.windows.net',';Password=',parameters('adminPass'))]"
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "name": "[variables('plan_name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('sku_name')]",
                "capacity": 1
            },
            "properties": {
                "name": "[variables('plan_name')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('webapp_name')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('plan_name')]"
            ],
            "properties": {
                "name": "[variables('webapp_name')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', variables('plan_name'))]",
                "alwaysOn": "[parameters('alwaysOn')]",
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "defaultConnection",
                            "ConnectionString": "[variables('ConnectionString')]",
                            "type": "SQLAzure"
                        }
                    ],
                    "appSettings": []
                }
            }
        }
    ],
    "outputs": {
        "webapp1_name": {
            "type": "string",
            "value": "[variables('webapp_name')]"
        }
    }
}