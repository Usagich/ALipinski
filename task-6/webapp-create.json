{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alwaysOn": {
            "type": "string"
        },
        "sku_name": {
            "type": "string"
        }
    },
    "variables": {
        "webapp_name": "[concat('webappSQL-',variables('plan_name'),'-',resourceGroup().name)]",
        "plan_name": "[concat('splanSQL-',resourceGroup().name)]"
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "name": "[variables('plan_name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().name]",
            "sku": {
                "name": "[parameters('sku_name')]",
                "capacity": 1
            },
            "properties": {
                "name": "[variables('plan_name')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('webapp_name')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().name]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/',variables('plan_name'))]"
            ],
            "properties": {
                "name": "[variables('webapp_name')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', variables('plan_name'))]",
                "alwaysOn": "[parameters('alwaysOn')]"
            }
        }
    ],
    "outputs": {
        "webapp1_name": {
            "type": "string",
            "value": "[variables('webapp_name')]"
        }
    }
}