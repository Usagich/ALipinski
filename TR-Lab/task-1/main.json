{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "defaultValue": "andreitest"
    },
    "AdminPassword": {
      "type": "string"
    },
    "Path": {
      "type": "string"
    },
    "sku": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Standard",
        "standard",
        "Premium",
        "premium"
      ]
    },
    "accessPolicies": {
      "type": "array",
      "defaultValue": []
    },
    "tenant": {
      "type": "string"
    },
    "enabledForDeployment": {
      "type": "bool"
    },
    "enabledForTemplateDeployment": {
      "type": "bool"
    },
    "enabledForDiskEncryption": {
      "type": "bool"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "VmVnet",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('Path'), '/VmVnet.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "AdminPassword": {
            "value": "[parameters('AdminPassword')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "key",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('Path'), '/keyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "sku": {
            "value": "[parameters('sku')]"
          },
          "accessPolicies": {
            "value": "[parameters('accessPolicies')]"
          },
          "tenant": {
            "value": "[parameters('tenant')]"
          },
          "enabledForDeployment": {
            "value": "[parameters('enabledForDeployment')]"
          },
          "enabledForTemplateDeployment": {
            "value": "[parameters('enabledForTemplateDeployment')]"
          },
          "enabledForDiskEncryption": {
            "value": "[parameters('enabledForDiskEncryption')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "AdminPassword": {
            "value": "[parameters('AdminPassword')]"
          }
        }
      }
    }
  ]
}