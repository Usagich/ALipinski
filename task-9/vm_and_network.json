{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vm_login": {
      "type": "string",
      "defaultValue": "azureuser"
    },
    "vm_passwd": {
      "type": "securestring",
      "defaultValue": "ZEtyu7702954!"
    },
    "vm_count": {
      "type": "int"
    }
  },
  "variables": {
    "pubip_name":"[concat('pubip-',variables('vm_name'), copyIndex(1),resourceGroup().name)]",
    "nic_name":"[concat(variables('vm_name'), copyIndex(1),resourceGroup().name)]",
    "vm_size":"Standard_DS1_v2",
    "vnet": "[concat('vnet-',resourceGroup().name)]",
    "vm_name":"vm",
    "vnet_pref": "10.10.0.0/16",
    "subnet": "[concat('subnet-',variables('vnet'))]",
    "subnet_pref": "10.10.0.0/24",
    "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnet'),  variables('subnet'))]"
  },
  "resources": [
    {
      "name": "[variables('vnet')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnet_pref')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnet')]",
            "properties": {
              "addressPrefix": "[variables('subnet_pref')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('vm_name'), copyIndex(1),resourceGroup().name)]",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "VMcopy",
        "count": "[parameters('vm_count')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vm_size')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2012-R2-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(variables('vm_name'),copyIndex(1),resourceGroup().name)]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            },
            "caching": "ReadWrite"
          }
        },
        "osProfile": {
          "computerName": "[concat(variables('vm_name'),copyIndex(1),resourceGroup().name)]",
          "adminUsername": "[parameters('vm_login')]",
          "windowsConfiguration": {
            "provisionVMAgent": true
          },
          "secrets": [],
          "adminPassword": "[parameters('vm_passwd')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('vm_name'), copyIndex(1)))]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('vm_name'), copyIndex(1)))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nic_name')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "NICCopy",
        "count": "[parameters('vm_count')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('vm_name'), copyIndex(1)))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableIPForwarding": false
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('vm_name'), copyIndex(1)))]",
        "[resourceId('Microsoft.Network/virtualNetworks/', variables('vnet'))]"
      ]
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('pubip_name')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "PIPCopy",
        "count": "[parameters('vm_count')]"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    }
  ],
  "outputs": {}
}