{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "pubip_name":"[concat('pub_ip-',resourceGroup().name)]",
        "nsg_name":"[concat('nsg-',resourceGroup().name)]"
    },
    "resources": [
        {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('pubip_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('nsg_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "[variables('nsg_name')]",
                        "properties": {
                            "description": "IIS rule TCP 8080",
                            "protocol": "Tcp",
                            "sourcePortRange": "8080",
                            "destinationPortRange": "8080",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 123,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "nsg_id": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_name'))]"
        },
        "pubip_id": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/publicIPAddresses', variables('pubip_name'))]"
        }
    }
}